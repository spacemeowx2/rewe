{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "outDir": "./dist/ts",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "baseUrl": "",
    "allowJs": true,
    "paths": {
      "@/*": [
        "*.ts",
        "*/index.ts"
      ]
    }
  },
  "include": [
    "main.ts"
  ]
}
